{
  "name": "shopify-app-template",
  "description": "Shopify App Template (Node) with TypeScript and Prisma",
  "author": "Saeed Yasin",
  "homepage": "https://github.com/SaeedYasin/shopify-app-template",
  "private": true,
  "scripts": {
    "build": "tsc && npm run build:client && npm run prisma:migrate",
    "build:client": "vite build --outDir dist/client",
    "prisma:migrate": "npx prisma migrate deploy",
    "debug": "node --inspect-brk server/index.js",
    "dev": "cross-env NODE_ENV=development nodemon server/index.ts --watch ./server",
    "preserve": "npm run build",
    "prepare": "npx prisma generate",
    "serve": "cross-env NODE_ENV=production node dist/server/index.js",
    "start": "npm run serve",
    "test": "vitest --reporter=verbose"
  },
  "type": "module",
  "engines": {
    "node": ">=16.13.0"
  },
  "dependencies": {
    "@apollo/client": "^3.5.10",
    "@prisma/client": "^4.1.1",
    "@shopify/app-bridge": "^2.0.22",
    "@shopify/app-bridge-react": "^2.0.26",
    "@shopify/app-bridge-utils": "^2.0.26",
    "@shopify/polaris": "^9.14.1",
    "@shopify/shopify-api": "^3.0.0",
    "@vitejs/plugin-react": "1.3.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "express": "^4.18.1",
    "graphql": "^16.5.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "serve-static": "^1.14.1",
    "vite": "^2.9.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^18.6.4",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "prisma": "^4.1.1",
    "supertest": "^6.2.3",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3",
    "vitest": "^0.10.5"
  },
  "prisma": {
    "schema": "server/prisma/schema.prisma"
  },
  "keywords": [
    "shopify",
    "shopify-app",
    "shopify-embedded-app",
    "shopify-app-template",
    "shopify-app-typescript"
  ],
  "license": "MIT"
}
